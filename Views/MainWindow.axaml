<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="QuizPracticeLinux.Views.MainWindow"
        Title="Quiz Practice"
        Width="730" MinWidth="730"
        Height="590" MinHeight="590"
        Background="#FFCABFBF"
        Icon="/Assets/avalonia-logo.ico">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="100*"/>
			<RowDefinition Height="200*"/>
			<RowDefinition Height="100*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock x:Name="QuestionText"
                   Grid.Row="0"
                   FontWeight="Bold"
                   FontSize="16"
                   TextWrapping="Wrap"
                   Background="White"
                   Padding="8,0,0,0"
                   Margin="0,0,0,5"/>

		<!-- Use StackPanel for dynamic answer controls -->
		<StackPanel x:Name="AnswersPanel"
                    Grid.Row="1"
                    Margin="0,0,0,5"
                    Background="White"
                    />

		<TextBlock x:Name="FeedbackText"
                   Grid.Row="2"
                   Foreground="Green"
                   TextWrapping="Wrap"
                   Margin="0,0,0,5"
                   Background="White"/>

		<Grid Grid.Row="3" Margin="0,0,0,5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Button x:Name="RestartButton"
                    Content="Restart"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="RestartButton_Click"
                    Grid.Column="0"/>
			<StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Grid.Column="2">
				<Button x:Name="SolveButton"
                        Content="Solve"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="SolveButton_Click"/>
				<Button x:Name="ShowFeedbackButton"
                        Content="Peek"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="ShowFeedbackButton_Click"/>
				<Button x:Name="PrevButton"
                        Content="Previous"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="PrevButton_Click"/>
				<Button x:Name="NextButton"
                        Content="Next"
                        Width="80"
                        Click="NextButton_Click"/>
			</StackPanel>
		</Grid>

		<StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    Margin="0,0,0,5">
			<ComboBox x:Name="QuestionsFileComboBox"
                      Width="350"
                      Margin="0,0,10,0"
                      SelectionChanged="QuestionsFileComboBox_SelectionChanged"/>
			<CheckBox x:Name="RandomizeQuestionsCheckBox"
                      Content="Randomize Questions"
                      Margin="0,0,5,0"
                      Checked="RandomizeSettingChanged"
                      Unchecked="RandomizeSettingChanged"/>
			<CheckBox x:Name="RandomizeAnswersCheckBox"
                      Content="Randomize Answers"
                      Margin="0,0,5,0"
                      Checked="RandomizeSettingChanged"
                      Unchecked="RandomizeSettingChanged"/>
		</StackPanel>
	</Grid>
</Window>